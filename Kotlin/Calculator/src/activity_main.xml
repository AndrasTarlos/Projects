<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/textView"
        android:padding="10dp"
        android:textSize="48sp"
        android:gravity="end|bottom"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundLightGrey"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:onClick="onDigit"
            android:text="@string/_7"
            android:textSize="25sp"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="@string/_8"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="@string/_9"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:backgroundTint="@color/btnOperatorDarkGrey"
            android:text="@string/dash"
            android:onClick="onOperator"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundLightGrey"
        android:layout_weight="1"
        >

        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_4"
            android:textSize="25sp"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml"/>
        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_5"
            android:textSize="25sp"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="@string/_6"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnOperatorDarkGrey"
            android:layout_weight="1"
            android:text="@string/multiply"
            android:textSize="25sp"
            android:onClick="onOperator"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundLightGrey"
        android:layout_weight="1"
        >

        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1"
            android:textSize="25sp"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_2"
            android:textSize="25sp"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />
        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_3"
            android:textSize="25sp"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textSize="25sp"
            android:backgroundTint="@color/btnOperatorDarkGrey"
            android:onClick="onOperator"
            tools:ignore="NestedWeights,UsingOnClickInXml"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/backgroundLightGrey"
        >

        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dot"
            android:textSize="25sp"
            android:onClick="onDecimalPoint"
            tools:ignore="NestedWeights,UsingOnClickInXml"/>
        <Button
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnNull"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_0"
            android:textSize="25sp"
            android:onClick="onDigit"
            tools:ignore="NestedWeights,UsingOnClickInXml"/>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/btnCLR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clr"
            android:textSize="20sp"
            android:backgroundTint="@color/btnNumberDarkGrey"
            android:onClick="onClear"
            tools:ignore="NestedWeights,UsingOnClickInXml"/>
        <Button
            android:layout_margin="2dp"
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/btnOperatorDarkGrey"
            android:text="@string/plus"
            android:textSize="25sp"
            android:onClick="onOperator"
            tools:ignore="NestedWeights,UsingOnClickInXml"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/backgroundLightGrey"
        >

        <Button
            android:backgroundTint="@color/btnEqualGreen"
            android:layout_margin="2dp"
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/equal"
            android:onClick="onEqual"
            tools:ignore="NestedWeights,SmallSp,UsingOnClickInXml"/>

        <Button
            android:layout_margin="2dp"
            android:id="@+id/btnBackspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:backgroundTint="@color/btnOperatorDarkGrey"
            android:text="@string/backspace"
            android:onClick="onBackspace"
            tools:ignore="NestedWeights,UsingOnClickInXml"/>
    </LinearLayout>

</LinearLayout>