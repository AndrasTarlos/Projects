<style>
  .table-setting {
      background-color: #00008b;
  }
</style>

<h1>Friend List</h1>
<br>
<table class="table table-striped table-bordered">
  <thead class="table-dark table-setting">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <!--<th>User Id</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <!--<td></td>-->
          <td><%= link_to "Show", friend, class:"btn btn-outline-info btn-sm" %></td>
          <td><%= link_to "Edit", edit_friend_path(friend), class:"btn btn-outline-secondary btn-sm" %></td>
          <td><%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>